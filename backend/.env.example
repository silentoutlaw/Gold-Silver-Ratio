# Application
APP_NAME=GSR Analytics
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://gsr_user:gsr_password@postgres:5432/gsr_analytics
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis (for Celery/caching)
REDIS_URL=redis://redis:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Data Providers - Metals & Markets
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
METALS_API_KEY=your-metals-api-key
# yfinance doesn't need a key

# Data Providers - Macro
FRED_API_KEY=your-fred-api-key

# AI Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# AI Configuration
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL_OPENAI=gpt-4-turbo-preview
DEFAULT_AI_MODEL_ANTHROPIC=claude-3-sonnet-20240229
DEFAULT_AI_MODEL_GOOGLE=gemini-pro
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7
AI_TIMEOUT_SECONDS=60

# Data Ingestion
INGESTION_SCHEDULE_ENABLED=true
INGESTION_DAILY_HOUR=20
INGESTION_DAILY_MINUTE=0
INGESTION_TIMEZONE=UTC

# Alerts
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_FROM=alerts@gsranalytics.com
ALERT_EMAIL_PASSWORD=your-email-password

ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_INTRADAY_DATA=false
ENABLE_ADVANCED_BACKTESTING=true
ENABLE_ML_REGIMES=false
